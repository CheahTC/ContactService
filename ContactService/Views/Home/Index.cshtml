@section scripts {
  @Scripts.Render("~/bundles/app")
}

<div class="page-header">
  <h1>Contacts Service</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Contacts</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: numbers">
                    <li>
                        <strong><span data-bind="text: ContactPersonName"></span></strong>
                        <small><a href="#" data-bind="click: $parent.getNumbers">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>


    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <div>
                <form class="form-horizontal" data-bind="submit: activateNumber">
                    <table class="table">
                        <tr><td>ContactPerson</td><td data-bind="text: detail().ContactPersonName"></td></tr>
                        <tr><td>Number</td><td data-bind="text: detail().Number"></td></tr>
                        <tr><td>Activated</td><td data-bind="text: IsActive"></td></tr>
                        <tr><td><button type="submit" id="btnActivate" class="btn btn-default">Activate</button></td></tr>
                        @*<tr><td>Activated</td><td data-bind="text: detail().Active ? 'Yes' : 'No'"></td></tr>*@
                    </table>
                </form>
            </div>
        </div>
    </div>
    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add New Number</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addNumber">
                    <div class="form-group">
                        <label for="inputContactName" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <select data-bind="options:contacts, optionsText: 'Name', value: newNumber.ContactPerson"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newNumber">
                        <label for="inputTitle" class="col-sm-2 control-label">Add Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNumber" data-bind="value:Number" />
                        </div>                        
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>